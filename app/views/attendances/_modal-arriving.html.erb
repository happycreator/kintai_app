<!-- モーダルウィンドウを呼び出すボタン -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#arriving">出社</button>
<!-- モーダルウィンドウの中身 -->
<div class="modal fade" id="arriving">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">出社</h4>
      </div>
      <div class="modal-body">
        <%= form_for @arriving_attendance do |f| %>
          <div class="field">
            <%= f.label :arriving_at, "出社日時" %>
            <%= f.datetime_select :arriving_at, {}, class: 'form-control' %>
          </div>
          
          <div class="actions">
            <%= f.submit  "登録する", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
</div>